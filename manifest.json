{
  "manifest_version": 3,
  "name": "ClipSwipe",
  "version": "1.0",
  "description": "Automatically navigate YouTube videos using keyboard shortcuts in order to Skip Adds.",
  "permissions": ["tabs"],
  "host_permissions": ["*://www.youtube.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "js": ["content.js"]
    }
  ]
}
